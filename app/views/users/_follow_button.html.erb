<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", relationship_path(user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "フォロー", relationships_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>